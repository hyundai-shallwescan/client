<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_framing_rect_height="313dp"
        app:zxing_framing_rect_width="313dp" />

    <View
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:background="@drawable/bg_scanner"
        android:layout_gravity="center"
        android:elevation="2dp"/>

    <com.journeyapps.barcodescanner.ViewfinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_possible_result_points="@color/white"
        app:zxing_result_view="@color/white"
        app:zxing_viewfinder_mask="#8C141414"
        app:zxing_viewfinder_laser="@color/mid_green"
        app:zxing_viewfinder_laser_visibility="true"
        android:elevation="1dp"/>

</merge>