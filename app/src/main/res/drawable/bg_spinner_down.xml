<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Spinner 기본 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="0.7dp" android:color="@color/gray"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <!-- 오른쪽 드롭다운 화살표 아이콘 -->
    <item android:drawable="@drawable/ic_arrow_bottom" android:width="21dp" android:height="13dp" android:right="10dp" android:gravity="end|center_vertical" />

</layer-list>
